<h1>Rooms index</h1>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>

<% if current_user.avatar.attached? %>
  <%= image_tag current_user.avatar, size: 80 %>
<% else %>
  <%= image_tag "default-profile.png", size: 80 %>
<% end %>

<div>
  <div>
    <%= render partial: 'rooms' %>
  </div>


  <div >
    <div>
      <h4>
        Welcome to the ChitChat <%= current_user.first_name %>!
      </h4>
      <p>
        You can create or join a room from the sidebar.
      </p>
    </div>
  </div>
</div>
