<h1>Rooms index</h1>

<% if current_user %>
  Logged in as <%= current_user.email %>.
  <%= link_to "Log Out", logout_path %>
<% else %>
  <%= link_to "Log In", login_path %> or
  <%= link_to "Sign Up", signup_path %> 

<% end %>
<p><%= notice %></p>

<img class="avatar" src="<%= current_user.profile_pic(100) %>" onerror="this.onerror=null;this.src='<%= error_profile_pic %>';">

<div>
  <div>
    <%= render partial: 'rooms' %>
  </div>

  <div >
    <div>
      <h4>
        Welcome to the ChitChat <%= current_user.first_name %>!
      </h4>
      <p>
        You can create or join a room from the sidebar.
      </p>
    </div>
  </div>
</div>