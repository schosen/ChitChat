<h1>
  <%= @room.name %>
</h1>

<div>
  <div>
   <%= render partial: 'rooms' %>
  </div>

  
    <div class="chat">
      <% @room_messages.each do |room_message| %>

        <div class="chat-message-container">
          <div class="row no-gutters">
            <div class="col-auto text-center">
              <img src="<%= profile_pic(room_message.user, 100) %>" class="avatar" alt="">
            </div>

            <div class="col">
              <div class="message-content">
                <p class="mb-1">
                  <%= room_message.message %>
                </p>

                <div class="text-right">
                  <small>
                  <%= room_message.created_at.strftime("%l:%M%P") %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%= form_for @room_message, remote: true do |form| %>
      <div>
        <%= form.text_field :message, as: :string,
                                 wrapper: false,
                                 label: false,
                                 input_html: {
                                   class: 'chat-input'
                                 } %>
        <div>
          <%= form.submit "Send" %>
        </div>
      </div>

      <%= form.hidden_field :room_id, as: :hidden %>
    <% end %>
</div>