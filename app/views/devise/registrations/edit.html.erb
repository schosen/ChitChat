<div class="container">
    <h1>Edit Account</h1>
  	<hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, class: "img-thumbnail"%>
            <% else %>
              <%= image_tag "default-profile.png", class: "img-thumbnail"%>
          <% end %>
          
          <h6>Upload a different photo...</h6>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.file_field :avatar %>
        </div>
      </div>
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a> 
          <i class="fa fa-coffee"></i>
          You must enter your current password to save any profile changes.
        </div>
        <h3>Personal info</h3>
      
          <div class="form-group">
            <div class="col-lg-8">
              <%= f.label :first_name %>:
              <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-8">
              <%= f.label :last_name %>:
              <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-8">
              <%= f.label :email %>:
              <%= f.text_field :email, autofocus: true, class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-lg-8">
              <%= f.label :username %>:
              <%= f.text_field :username, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-8">
              New <%= f.label :password %>:
              <%= f.text_field :password, autofocus: true, class: "form-control", type: "password" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-8">
              <%= f.label :password_confirmation %>:
              <%= f.text_field :password_confirmation, autofocus: true, class: "form-control", type: "password" %>
            </div>
          </div>

          <br>

          <div class="form-group">
            <div class="col-md-8">
              <%= f.label :current_password %>:
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", type: "password" %>
            </div>
          </div> 

          <div class="form-group">
            <div class="col-md-8">
              <%= f.submit "Save changes", class: "btn btn-success" %>
              <span></span>
              <input type="reset" class="btn btn-default" value="Clear form">
            </div>
          </div>
        <% end %>

        <br>

        <div class="form-group">
        <label class="col-md-3 control-label">Leaving ChitChat?</label>
          <div class="col-md-8"> 
            <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
  </div>
</div>
<hr>